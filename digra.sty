\usepackage{titlesec}
\usepackage[affil-it]{authblk}
\usepackage[tmargin=1in,bmargin=1in,lmargin=1.5in,rmargin=1.5in]{geometry}
\usepackage{fontspec}
\usepackage{fancyhdr}
\usepackage{etoolbox}
\usepackage{lmodern}

%% Page Numbering
\pagestyle{fancy}
\fancyhf{}
 
\renewcommand{\headrulewidth}{0pt}
\rfoot{\centering -- \thepage --}
 

%%No Page Number on First Page
\fancypagestyle{plain}{%
  \fancyhf{} % clear all header and footer fields
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
}


%% Section Fonts
\newfontfamily\sectionfont[]{Arial}
\setmainfont{Times New Roman}
\titleformat{\section}
  {\sectionfont\large\bfseries}
  {\thesection}{}{}
\titleformat{\subsection}
  {\sectionfont\large\bfseries}
  {\thesection}{}{}
\titleformat{\subsubsection}
  {\sectionfont\large\slshape}
  {\thesection}{}{}
%% Section Spacing
%%\titlespacing{command}{left spacing}{before spacing}{after spacing}[right]
\titlespacing*\section{0pt}{12pt}{0pt}
\titlespacing*\subsection{0pt}{12pt}{0pt}
\titlespacing*\subsubsection{0pt}{12pt}{0pt}

%%Titling
\makeatletter
\patchcmd{\@maketitle}{\LARGE \@title}{\fontsize{18}{18}\bfseries\sectionfont\@title}{}{}
\makeatother

\renewcommand\Authfont{\Large\bfseries\fontsize{14}{14}}
\renewcommand\Affilfont{\large\mdseries\fontsize{12}{12}}
